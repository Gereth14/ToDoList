<%- include("partials/header") -%>
<div class="position-absolute top-50 start-50 translate-middle">
    <p class="text-center fs-2">Forget Password</p>
    <form action="/ForgetPassword" method="post">
        <div class="form-floating mb-3">
            <input type="email" name="Email" class="form-control" id="floatingEmail" placeholder="name@example.com" autocomplete="off" pattern=".+\.com" required
            oninvalid="this.setCustomValidity('Email required')" oninput="this.setCustomValidity('')">
            <label for="floatingEmail">Email address</label>
          </div>
          <div class="text-center">
            <button id="SignUp" type="submit" class="btn btn-primary" style="background-color: #A683E3;">Request Email</button>
          </div>
    </form>
    <span name="ErrorMessage"><%= ErrorMessage %></span>
<%- include("partials/footer") -%>